[Unit]
Description=PVE Exporter
After=network-online.target

# This assumes you are running pve_exporter under the user "prometheus"

[Service]
User=prometheus
Restart=on-failure
#Type=forking
#KillMode=mixed
ExecStart=/opt/prometheus-pve-exporter/bin/pve_exporter --config.file='/etc/prometheus/pve_exporter.yml'

[Install]
WantedBy=multi-user.target
